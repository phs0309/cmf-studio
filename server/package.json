{
  "name": "cmf-studio-server",
  "version": "1.0.0",
  "description": "Backend API for CMF Studio",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/database/*.sql dist/database/ 2>/dev/null || echo 'SQL files copied'",
    "start": "node index.js",
    "serve": "node index.js",
    "prebuild": "rm -rf dist || echo 'No dist directory to remove'",
    "postbuild": "ls -la dist/ && ls -la dist/database/ && echo 'Build completed successfully'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "typescript": "^5.3.3",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9"
  },
  "devDependencies": {
    "tsx": "^4.7.0"
  }
}